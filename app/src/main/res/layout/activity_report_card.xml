<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_36"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_marginRight="@dimen/dp_36"
                    android:background="@drawable/shape_white_radius_bg"
                    android:paddingBottom="@dimen/dp_25">

                    <LinearLayout
                        android:id="@+id/contentRep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_120"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_40"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="考生姓名:"
                                android:textColor="@color/examinee_information_text_color"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="准考证号:"
                                android:textColor="@color/examinee_information_text_color"
                                android:textSize="@dimen/sp_16"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="科目:"
                                android:textColor="@color/examinee_information_text_color"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="操作实验:"
                                android:textColor="@color/examinee_information_text_color"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="操作时长:"
                                android:textColor="@color/examinee_information_text_color"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="总成绩:"
                                android:textColor="@color/title_text_color"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="折算百分制成绩:"
                                android:textColor="@color/title_text_color"
                                android:textSize="@dimen/sp_16" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/dp_15">

                            <TextView
                                android:id="@+id/tv_exam_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="张三"
                                android:textColor="@color/examinee_information_text_color"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:id="@+id/tv_card_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_exam_name"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="123456"
                                android:textColor="@color/examinee_information_text_color"
                                android:textSize="@dimen/sp_16"

                                />

                            <TextView
                                android:id="@+id/tv_subject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_card_number"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="物理"
                                android:textColor="@color/examinee_information_text_color"
                                android:textSize="@dimen/sp_16"

                                />

                            <TextView
                                android:id="@+id/tv_operation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_subject"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="探究光的反射规律"
                                android:textColor="@color/examinee_information_text_color"
                                android:textSize="@dimen/sp_16"

                                />

                            <TextView
                                android:id="@+id/tv_operation_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_operation"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="15:15"
                                android:textColor="@color/examinee_information_text_color"
                                android:textSize="@dimen/sp_16"

                                />

                            <TextView
                                android:id="@+id/tv_grade"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_operation_time"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="223分/满分80分"
                                android:textColor="@color/title_text_color"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:id="@+id/tv_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_grade"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="93.31分"
                                android:textColor="@color/title_text_color"
                                android:textSize="@dimen/sp_16" />

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp_30"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/tv_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/tv_grade"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_toRightOf="@+id/tv_grade"
                                android:background="@drawable/shape_report_btn"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_5"
                                android:paddingRight="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_5"
                                android:text="详情"
                                android:textColor="@color/tv_white"
                                android:textSize="@dimen/sp_16" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contentRep"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/reportApply"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/seletor_btn"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_4"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_4"
                            android:text="对成绩有议,申请人工审核"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/reportExit"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_40"
                            android:background="@drawable/seletor_btn"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_4"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_4"
                            android:text="确认成绩无误退出"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_100"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_35"
                    android:src="@drawable/icon_upload_score_title_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_60"
                    android:text="成绩报告"
                    android:textSize="@dimen/sp_28" />
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="@dimen/dp_75"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/exam_frame_tool_bar_bg_color">

            <TextView
                android:id="@+id/tv_report_card_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableTop="@drawable/retreat_icon"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:paddingStart="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="退出系统"
                android:textColor="@color/tv_white"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>