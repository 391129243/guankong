<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:keyboard="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sonStepNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_10"
        android:text="步骤1："
        android:textColor="@color/examinee_information_text_color"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:id="@+id/topStepConLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sonSteptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:text="请将铁架台和杠杆组装好"
            android:textColor="@color/examinee_information_text_color"
            android:textSize="@dimen/sp_14" />

        <com.jay.easykeyboard.SystemKeyBoardEditText
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_bord"
            android:textColor="@color/examinee_information_text_color"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            android:id="@+id/topEditText"
            android:singleLine="true"
            android:gravity="center"
            android:textColorHint="@color/login_input_hint_color"
            keyboard:keyDrawable="@color/white"
            keyboard:outSideCancel="true"
            keyboard:xmlLayoutResId="@xml/keyboard_numbers"/>

        <TextView
            android:id="@+id/sonSteptitleEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:text="请将铁架台和杠杆组装好"
            android:textColor="@color/examinee_information_text_color"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>