<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_30"
    android:layout_marginRight="@dimen/dp_30"
    android:layout_marginTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_42"
    android:background="@drawable/shape_white_radius_bg"
    tools:ignore="RtlCompat">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/exam_frame_time_text_color" />

    <TextView
        android:id="@+id/intitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/app_name"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:text="考生须知:"
        android:textColor="@color/examinee_information_text_color"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_2"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/instructions_line_color"
        android:layout_marginTop="@dimen/dp_4"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="1.实验考试总时长为15分钟"
        android:textColor="@color/instructions_text_color"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/instructions_line_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="2.请核对姓名、年级、考号等个人信息"
        android:textColor="@color/instructions_text_color"
        android:textSize="@dimen/dp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/instructions_line_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="3.请查看实验设备状态"
        android:textColor="@color/instructions_text_color"
        android:textSize="@dimen/dp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/instructions_line_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="4.如个人信息有误，或实验设备为'异常'/'未连接'状态，请点击'举手'按钮"
        android:textColor="@color/instructions_text_color"
        android:textSize="@dimen/dp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/instructions_line_color"
        android:paddingBottom="@dimen/dp_40"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_radius_bg"
        android:orientation="horizontal">

        <com.learn.all_electric.view.CountDownProgressBar
            android:id="@+id/cpb_countdown"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="right"
            app:countDown_centerTextColor="@color/blue"
            app:countDown_centerTextSize="16dp"
            app:countDown_circleWidth="15dp"
            app:countDown_firstColor="@color/light_red"
            app:countDown_isShowGradient="true"
            android:visibility="invisible"
            app:countDown_secondColor="@color/DodgerBlue" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="500dp"
            android:background="@drawable/shape_login_btn"
            android:gravity="center"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:text="确认"
            android:visibility="invisible"
            android:textColor="@color/tv_white"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>